<div class="w-full max-w-3xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-white tracking-tight">Meus Links</h1>
    <div class="flex items-center space-x-3">
      <%= link_to "+ Novo Link", new_link_path, class: "bg-emerald-500 hover:bg-emerald-400 text-white px-5 py-2.5 rounded-lg shadow-lg hover:shadow-emerald-500/30 transition-all font-medium" %>
      <%= button_to "Sair", logout_path, method: :delete, class: "text-gray-300 hover:text-white px-3 py-2 bg-transparent border border-white/10 hover:bg-white/10 rounded-lg transition-all cursor-pointer" %>
    </div>
  </div>

  <% if @links.any? %>
    <div class="grid gap-4">
      <% @links.each do |link| %>
        <div class="p-6 backdrop-blur-md bg-white/5 border border-white/10 rounded-xl shadow-lg hover:bg-white/10 transition-colors group">
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            
            <div class="flex-1 min-w-0">
               <div class="flex items-center gap-2 mb-1">
                  <span class="text-xs font-bold uppercase tracking-wider text-blue-400 bg-blue-500/10 px-2 py-0.5 rounded">Encurtado</span>
                  <%= link_to short_url(link.short_code), short_url(link.short_code), target: "_blank", class: "text-lg font-semibold text-white hover:text-blue-300 truncate transition-colors" %>
               </div>
               <div class="flex items-center gap-2 text-sm text-gray-400">
                  <span class="text-xs uppercase tracking-wide opacity-50">Destino:</span>
                  <%= link_to link.original_url, link.original_url, target: "_blank", class: "truncate hover:text-gray-200 transition-colors block max-w-md" %>
               </div>
            </div>

            <div class="flex items-center space-x-2 opacity-100 md:opacity-0 group-hover:opacity-100 transition-opacity">
              <%= link_to "Detalhes", link, class: "text-sm text-gray-300 hover:text-white px-3 py-1.5 rounded-md hover:bg-white/10 transition-all" %>
              
              <%= button_to "Excluir", link, method: :delete, data: { confirm: "Tem certeza?" },
                  class: "text-sm text-rose-400 hover:text-rose-300 px-3 py-1.5 rounded-md hover:bg-rose-500/10 transition-all cursor-pointer bg-transparent border-none" %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 backdrop-blur-sm bg-white/5 border border-white/10 rounded-2xl border-dashed">
      <p class="text-gray-400 text-lg mb-4">Você ainda não encurtou nenhum link.</p>
      <%= link_to "Criar meu primeiro link", new_link_path, class: "text-blue-400 hover:text-blue-300 font-medium hover:underline" %>
    </div>
  <% end %>
</div>