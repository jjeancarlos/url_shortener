<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold mb-4">Novo Link</h1>
  <%= form_with model: @link, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :original_url, "URL Original", class: "block font-medium" %>
      <%= f.text_field :original_url, class: "w-full border rounded p-2" %>
    </div>
    <%= f.submit "Encurtar", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  <% end %>
  <div class="mt-4">
    <%= link_to "Voltar", links_path, class: "text-gray-600 hover:underline" %>
  </div>
</div>
