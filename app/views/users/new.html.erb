<div class="max-w-sm mx-auto mt-10 p-6 bg-white rounded-xl shadow">
  <h1 class="text-2xl font-bold mb-4 text-center">Cadastrar</h1>
  <%= form_with model: @user, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium" %>
      <%= f.text_field :name, class: "w-full border rounded p-2" %>
    </div>
    <div>
      <%= f.label :email, class: "block text-sm font-medium" %>
      <%= f.email_field :email, class: "w-full border rounded p-2" %>
    </div>
    <div>
      <%= f.label :password, class: "block text-sm font-medium" %>
      <%= f.password_field :password, class: "w-full border rounded p-2" %>
    </div>
    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium" %>
      <%= f.password_field :password_confirmation, class: "w-full border rounded p-2" %>
    </div>
    <%= f.submit "Cadastrar", class: "w-full bg-green-600 text-white py-2 rounded hover:bg-green-700" %>
  <% end %>
  <p class="mt-4 text-center text-sm">JÃ¡ tem conta? <%= link_to "Entrar", login_path, class: "text-blue-600 hover:underline" %></p>
</div>
